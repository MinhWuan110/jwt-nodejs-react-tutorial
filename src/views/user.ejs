<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <!-- <div>
        <%= JSON.stringify(userList) %>
    </div> -->
    <div class="user-infor-container">
        <form method="post" action="/users/create-users">
            <div class="container">
                <div class="row">
                    <div class="mt-3 mb-3 ">
                        <h3>Create a new user</h3>
                    </div>
                    <div class="mb-3 mt-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="emailName" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="passWord" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="username" class="form-label">User name </label>
                        <input type="text" class="form-control" id="username" name="userName" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 form-check col-6">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="table-user">
        <div class="container">
            <div class="row">
                <h3 class="mt-3">Table user: </h3>
                <table class="table table table-hover table-secondary table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Email</th>
                            <th scope="col">User Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(function(item, index){ %>
                            <tr>
                                <th scope="row">
                                    <%=item.id%>
                                </th>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td>
                                    <%= item.username%>
                                </td>
                                <td>
                                    <a href="/update-User/<%= item.id %>" class="btn btn-warning">
                                        Edit
                                    </a>
                                    <form action="/delete-user/<%= item.id %>" method="post" style="display:inline">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                                <% }) %>
                            </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</body>

</html>